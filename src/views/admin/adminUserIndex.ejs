<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <body>
    <%- include('../partials/adminheader.ejs') %>

    <main>

        <div class="containerproductsAdmin">

            <% user.forEach(user=> { %>
            <div class="cardAdmin">
                <a href="/products/detail/<%- user.id %>">


                    <div class="descriptionAdmin">
                        <h1> <%= user.name %> </h1>
                        <span>$<%- user.price %></span>
                    </div>

                </a>
                <div class="button-groupAdmin">
                    <a href="/admin/products/edit/<%= user.id %>" class="cart">Editar</a>
                    <form action="/admin/products/<%- user.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btneliminarprod">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-trash" viewBox="0 0 16 16">
                                <path
                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd"
                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </button>
                    </form>
                </div>


            </div>

            <% }) %>

        </div>

    </main>


        <%- include ('../partials/footer.ejs') %>
          <%- include ('../partials/scripts.ejs') %>
  </body>

</html>