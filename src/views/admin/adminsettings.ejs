<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs', {title: 'Admin - ElectroHogar'}) %>

<body>
    <%- include ('../partials/adminheader.ejs') %>

    <main>


        <div class="navAdminBtn">
            <a href="/admin/products/create" class="productCreateA">Crear producto</a>

            <div class="numeroProds">
                <span> Productos en total: <%- products.length %></span>
            </div>
        </div>

        <div class="searchadminprod">
            <div class="buscarMobile">
                <form action="/admin/products" method="GET" id="search">
                    <input type="search" name="keywords" placeholder="Buscar productos..">
                    <button class="btnsearch" type="submit"> <i class="fas fa-search"></i></button>
                </form>
            </div>
        </div>

        <div class="containerproductsAdmin">


            <% products.forEach(Product=> { %>
            <div class="cardAdmin"><a href="/products/detail/<%- Product.id %>">
                    <div class="descriptionAdmin">
                        <h1> <%= Product.name %> </h1>
                        <span>$<%- Product.price %></span>
                    </div>
                </a>
                <div class="button-groupAdmin">
                    <a href="/admin/products/edit/<%= Product.id %>" class="cart">Editar</a>
                    <form action="/admin/products/<%- Product.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btneliminarprod" onclick="confirm('Estas seguro que deseas eliminar?')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-trash" viewBox="0 0 16 16">
                                <path
                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd"
                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </button>
                    </form>
                </div>
            </div>

            <% }) %>

        </div>


    </main>


    <%- include ('../partials/footer.ejs') %>
    <%- include ('../partials/scripts.ejs') %>

</body>

</html>