<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>

<body>
    <%- include('../partials/header.ejs') %>

    <%- include ('../partials/nav.ejs') %>


    <main>

        <!-- Carrousel -->
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/carr1.jpg" class="d-block w-100" alt="imgcarousel">
                </div>
                <div class="carousel-item">
                    <img src="/images/carr2.jpg" class="d-block w-100" alt="carousel">
                </div>
                <div class="carousel-item">
                    <img src="/images/carr3.jpg" class="d-block w-100" alt="carousel">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <!-- End Carrousel -->

        <!-- Linea bajo carusel -->

        <div class="lineabajocarousel">
            <div class="col1linea">
                <img class="imgtrucklinea" src="/images/delivery-truck (1).png" alt="">
                <span>ENVÍOS A <b> TODO EL PAÍS </b> </span>
            </div>

            <div class="col2linea">
                <img class="tarjetaslinea" src="/images/549d2cb2275c2ae398b2f7bd1450.png" alt="">
                <span>Pagá con crédito y débito
                    <a href="#">Ver promociones</a></span>
            </div>

            <div class="col3linea">
                <img class="envioslinea" src="/images/ayudar.png" alt="">
                <span>Consulta tus dudas al <b>0810-1111-4444</b> </span>

            </div>
        </div>
        <!-- End Linea bajo carusel -->

        <div class="SectionTittle">
            <H3>Ofertas imperdibles en <b> 12 cuotas sin interes! </b></H3>
        </div>

        <div class="section">
           

            <!-- Swiper -->
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">

                    <% products12cuotas.forEach(Product=> { %>
                    <div class="swiper-slide">
                        <div class="card">
                            <a href="/products/detail/<%- Product.id %>">
                                <div class="image-section">
                                    <img src="/images/productsDB/<%- Product.productImages[0].image %>" alt="">
                                </div>

                                <div class="descriptionSlider">
                                    <h1>
                                        <% if (Product.name.length > 30) { %>
                                        <%- `${Product.name.slice(0,90)}...` %>
                                        <% } else { %>
                                        <%= Product.name %>
                                        <% } %> </h1>
                                    <span>$<%- Product.price %></span>
                                </div>
                                <small class="cuotasSlider"> <%- Product.cuotes %> cuotas x
                                    <%- Product.price / Product.cuotes  %>
                                </small>

                            
                                <div>
                                    <% if (Product.discount > 0) { %>
                                        <span class="discountCard"> <%- Product.discount%> %OFF </span>
                                         <% } else { %>
                                            
                                        <% } %> 
                                </div>
                              

                            </a>

                    
                        </div>
                    </div>

                    <% }) %>

                </div>
                <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
            </div>
        </div>


        <div class="imgcategorias">
            <a href="/products/category/5"> <img src="/images/512.jpg" alt=""></a>
            <a href="/products/category/3"> <img src="/images/513.jpg" alt=""></a>
        </div>


    </main>




    <%- include ('../partials/footer.ejs') %>

    <%- include ('../partials/scripts.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>


</body>




</html>