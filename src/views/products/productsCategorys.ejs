<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

<body>
    <%- include('../partials/header.ejs') %>

    <%- include ('../partials/nav.ejs') %>

    <main>

        <div class="boxarea1">
            <div class="namecategory">
               <span> Estas en la categoria <b> <%= category.name %> </b> </span>   
            </div>

            <div class="containerCategory">
                <div class="boxareachild1">
                    <span><b><%- products.length %> </b>Productos</span>
                </div>
    
                <div class="boxareachild2">
                   <span>Vista:</span>  
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: msFilter"><path d="M4 4h4v4H4zm6 0h4v4h-4zm6 0h4v4h-4zM4 10h4v4H4zm6 0h4v4h-4zm6 0h4v4h-4zM4 16h4v4H4zm6 0h4v4h-4zm6 0h4v4h-4z"></path></svg>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: msFilter"><path d="M4 6h2v2H4zm0 5h2v2H4zm0 5h2v2H4zm16-8V6H8.023v2H18.8zM8 11h12v2H8zm0 5h12v2H8z"></path></svg>
                </div>
    
                <div class="boxareachild3">
                    Filtrar por: <select class="selectprecio" name="selectprecio" id="">
                            <option value="menorprecio">Menor precio</option>
                            <option value="menorprecio">Mayor precio</option>
                        </select>
                </div>
            </div>
  
            </div>

        <div class="section">

            <!-- Cards de productos -->

            <div class="cards">
                <% products.forEach(Product => { %>
                <div class="card">
                    <a href="/products/detail/<%- Product.id %>">
                        <div class="image-section">
                            <img src="/images/productsDB/<%- Product.productImages[0].image %>" alt="">
                        </div>
                        <div class="description">
                            <h1>
                                <% if (Product.name.length > 30) { %>
                                <%- `${Product.name.slice(0,90)}...` %>
                                <% } else { %>
                                <%= Product.name %>
                                <% } %> </h1>
                            <span>$<%- Product.price %></span>
                        </div>
                        <small class="cuotas"> <%- Product.cuotes %> cuotas x <%- Product.price / Product.cuotes  %>
                        </small>
                        <span> </span>
                    </a>
                    <div class="button-group">
                        <a href="/products/detail/<%- Product.id %>" class="buy">Comprar</a>
                        <a href="/products/detail/<%- Product.id %>" class="cart">Agregar al carrito</a>
                    </div>
                    <div class="fav">
                        <i class="fa">&#xf004;</i>
                    </div>
                </div>
                <% }) %>

            </div>
        </div>
        </div>






    </main>




    <%- include ('../partials/footer.ejs') %>

    <%- include ('../partials/scripts.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

</body>


</html>