<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

<body class="body-registro">

  <%- include('../partials/header.ejs') %>


  <%- include('../partials/nav.ejs') %>


  <main class="logregistermain">
    <div class="container">

      <div class="container-registro">
        <div class="logo-registro">
          <img src="/images/electrohogarlogo.png">
        </div>

        <p class="ingreso">Ingresa los datos de tu cuenta</p>

        <div class="formcenter">

        <form action="/users/registro" method="POST" class="form-registro">

              <div class="form">
                <input id="name" class="input-style" type="text" name="name" placeholder="Nombre:"
                  value="<%= locals.old && old.name %>">
                  
                <% if (locals.errors && errors.name) { %>
                <span class="error" id="nameErrors">
                  <%= errors.name.msg %>
                </span>
                <% } %>
              </div>

                <div class="form">
                  <input id="lastname" class="input-style email" type="text" name="last_name" placeholder="Apellido:"
                    value="<%= locals.old && old.last_name %>">
                    <i class="fa-regular fa-circle-check"></i>
                    <i class="fa-solid fa-circle-exclamation"></i>
                  <% if (locals.errors && errors.last_name) { %>
                  <span class="error" id="lastErrors">
                    <%= errors.last_name.msg %>
                  </span>
                  <% } %>
                </div>

                <div class="form">
                  <input id="email" class="input-style" type="email" name="email" placeholder="Email:"
                    value="<%= locals.old && old.email %>">
                  <% if (locals.errors && errors.email) { %>
                  <span class="error" id="emailErrors">
                    <%= errors.email.msg %>
                  </span>
                  <% } %>
                </div>

                <div class="form">
                  <input id="pass" class="input-style" type="password" name="pass1" placeholder="Contrase単a:">
                  <% if (locals.errors && errors.pass1) { %>
                  <span class="error" id="passErrors">
                    <%= errors.pass1.msg %>

                  </span>
                  <% } %>
                </div>

                <div class="form">
                  <input id="pass2" class="input-style" type="password" name="pass2" placeholder="Confirmar Contrase単a:">
                  <% if (locals.errors && errors.pass2) { %>
                  <span class="error" id="pass2Errors">
                    <%= errors.pass2.msg %>
                  </span>
                  <% } %>
                </div>

                    <div class="box-2">
                      <div class="form">
                        <input id="lastname2" class="input-style" type="text" name="last_name" placeholder="Apellido:"  value="<%= locals.old && old.last_name %>">
                        <% if (locals.errors && errors.last_name) { %>
                          <span class="error" id="lastname2Errors">
                            <%= errors.last_name.msg %>
                          </span>
                          <% } %>
                      </div>

                      <div class="form">
                        <input id="email2" class="input-style" type="email" name="email" placeholder="Email:" value="<%= locals.old && old.email %>"  >
                        <% if (locals.errors && errors.email) { %>
                          <span class="error" id="email2Errors">                         
                            <%= errors.email.msg %>
                          </span>
                          <% } %>
                      </div>

                      <div class="form">
                        <input id="pass3" class="input-style" type="password" name="pass1" placeholder="Contrase単a:"  >
                        <% if (locals.errors && errors.pass1) { %>
                          <span class="error" id="pass3Errors">
                            <%= errors.pass1.msg %>

                          </span>
                          <% } %>
                      </div>

                      <div class="form">
                        <input id="pass4" class="input-style" type="password" name="pass2" placeholder="Confirmar Contrase単a:">
                        <% if (locals.errors && errors.pass2) { %>
                          <span class="error" id="pass4Errors">
                            <%= errors.pass2.msg %>
                          </span>
                          <% } %>
                      </div>

                    </div>

                  </div>
                  <div class="botonesregister">
                    <span class="cuenta"> <button type="submit" class="btn btn-continue">Registrarse</button></span>
              </form>

              <div class="google-btn">
                <div class="google-icon-wrapper">
                  <img class="google-icon"
                    src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" />
                </div>
                <a href="#">
                  <p class="btn-text"><b>Registrarse con google</b></p>
                </a>
              </div>

          </form>
          
      </div>

      <a class="a_inicio" href="/">Volver al menu de inicio</a>
      <script src="/js/modoOscu.js"></script>
    </div>

    
  </main>
  

  <%- include('../partials/footer.ejs') %>
  <%- include('../partials/scripts.ejs') %>

  <script src="/js/modoOscu.js"></script>
</body>
<script src="/js/validacionRegistro.js"></script>
  </body>

</html>